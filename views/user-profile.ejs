<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang Cá Nhân</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-4">
      <div class="row">
        <!-- Cột thông tin người dùng -->
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Tên Người Dùng</h5>
              <p class="card-text">Thông tin thêm về người dùng...</p>
              <a href="#" class="btn btn-primary">Chỉnh sửa hồ sơ</a>
            </div>
          </div>
        </div>

        <!-- Cột chức năng -->
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Quản lý tài khoản</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <a href="#">Đơn hàng của tôi</a>
                </li>
                <li class="list-group-item">
                  <a href="#">Thông tin cá nhân</a>
                </li>
                <li class="list-group-item">
                  <a href="#">Thay đổi mật khẩu</a>
                </li>
                <!-- Thêm form đăng xuất -->
                <li class="list-group-item">
                  <form
                    id="logoutForm"
                    action="/logout"
                    method="POST"
                    style="display: none"
                  >
                    <!-- Các trường form nếu cần -->
                    <!-- Ví dụ: <input type="hidden" name="key" value="value"> -->
                  </form>
                  <a href="#" id="logoutLink">Đăng xuất</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.0/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Thêm đoạn mã JavaScript để xử lý sự kiện nhấn vào liên kết đăng xuất -->
    <script>
      document
        .getElementById("logoutLink")
        .addEventListener("click", function () {
          // Submit form khi người dùng nhấn vào liên kết
          document.getElementById("logoutForm").submit();
        });
    </script>
  </body>
</html>
